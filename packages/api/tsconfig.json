{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                     
    "sourceMap": true,                     
    "strict": true,                           
    "noImplicitAny": true,                 
    "noUnusedLocals": true,                
    "noUnusedParameters": true,            
    "noImplicitReturns": true,             
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["lib/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/singled/**/*.ts"]
}
